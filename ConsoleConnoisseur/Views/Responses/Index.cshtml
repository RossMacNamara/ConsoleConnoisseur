@model IEnumerable<ConsoleConnoisseur.Models.Response>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactMe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactMe)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ResponseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ResponseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ResponseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
