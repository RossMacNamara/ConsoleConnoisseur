            </div>
            <div class="form-group">
                <label asp-for="ConsoleId" class="control-label"></label>
                <input asp-for="ConsoleId" class="form-control" value="@ViewBag.data" readonly/>
                <span asp-validation-for="ConsoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

