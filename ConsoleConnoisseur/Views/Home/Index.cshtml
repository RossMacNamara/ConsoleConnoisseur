@model IEnumerable<ConsoleConnoisseur.Models.Console>
@{
    ViewData["Title"] = "Index";
}

<h1>Consoles We Stock</h1>

<div class="container">
    <div class="row">
        <p>
            @foreach (ConsoleConnoisseur.Models.Console item in Model)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <h5>
                        <a asp-controller="Home" asp-action="ViewDetails" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Name)</a>
                    </h5>


                    <div class="thumbnail">
                        <img alt="@item.Name" src="@item.ImgThumbnailUrl" class="img-responsive thumbnailImg" />
                    </div>

                    <div class="caption">
                        <h3 class="pull-right">
                            @Html.DisplayFor(modelItem => item.Price)
                        </h3>
                    </div>

                </div>
            }

        </p>
    </div>
</div>